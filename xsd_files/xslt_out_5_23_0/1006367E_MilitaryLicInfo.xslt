<?xml version="1.0" encoding="utf-8"?>
<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform" xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:clt_ru="urn:customs.ru:CommonLeafTypes:5.10.0" xmlns:cat_ru="urn:customs.ru:CommonAggregateTypes:5.22.0" xmlns:RUScat_ru="urn:customs.ru:RUSCommonAggregateTypes:5.22.0" xmlns:mli="urn:customs.ru:Information:SQDocuments:MilitaryLicInfo:5.23.0">
	<!-- Шаблон для типа MilitaryLicInfoType -->
	<xsl:template match="mli:MilitaryLicInfo">
		<xsl:param name="w" select="190"/>
		<html>
			<head>
				<style>
                  body {
                  background: #cccccc;
                  }

                  div
                  {
                  white-space: normal;
                  }

                  div.page {
                  margin: 10px auto;
                  margin-top: 6pt;
                  margin-bottom: 6pt;
                  padding: 10mm 10mm 10mm 20mm;
                  background: #ffffff;
                  border: solid 1pt #000000;
                  }

                  .marg-top
                  {
                  margin-top:5mm;
                  }

                  table
                  {
                  width: 100%;
                  border: 0;
                  empty-cells: show;
                  border-collapse: collapse;
                  margin-top: 1px;
                  }

                  table.border tr td
                  {
                  border: 1px solid windowtext;
                  }

                  .value
                  {
                  border-bottom: solid 1px black;
                  font-family: Arial;
                  font-size: 11pt;
                  font-style: italic;
                  }

                  .annot
                  {
                  font-family: Arial;
                  font-size: 11pt;
                  }


                  .title
                  {
                  font-weight:bold;
                  font-family: Arial;
                  font-size: 11pt;
                  }

                  tr.title td
                  {
                  font-weight:bold;
                  font-family: Arial;
                  font-size: 9pt;
                  }



                  .bordered { border-collapse: collapse; }
                  td.bordered
                  {
                  border: solid 1px windowtext;
                  }

                  td.graphMain
                  {
                  vertical-align:top;
                  }
                  td.value.graphMain
                  {
                  vertical-align:bottom;
                  }
                </style>
			</head>
			<body>
				<div class="page" style="width: {$w}mm;">
					<table>
						<tbody>
							<tr>
								<td align="center" class="title">
									<font size="4">
										<b>Сведения из лицензии на ввоз (вывоз) продукции военного назначения, выданной Федеральной службой по военно-техническому сотрудничеству </b>
									</font>
								</td>
							</tr>
						</tbody>
					</table>
					<br/>
					<!--table>
						<tr>
							<td class="annot graphMain" style="width:50%">Уникальный идентификатор документа</td>
							<td class="value graphMain" style="width:50%">
								<xsl:apply-templates select="cat_ru:DocumentID"/>
							</td>
						</tr>
					</table>
					<xsl:if test="cat_ru:RefDocumentID">
						<table>
							<tr>
								<td class="annot graphMain" style="width:50%">Уникальный идентификатор исходного документа</td>
								<td class="value graphMain" style="width:50%">
									<xsl:apply-templates select="cat_ru:RefDocumentID"/>
								</td>
							</tr>
						</table>
					</xsl:if>
					<xsl:if test="cat_ru:INNSign">
						<table>
							<tr>
								<td class="annot graphMain" style="width:50%">ИНН владельца МЧД</td>
								<td class="value graphMain" style="width:50%">
									<xsl:apply-templates select="cat_ru:INNSign"/>
								</td>
							</tr>
						</table>
					</xsl:if>
					<xsl:if test="cat_ru:MCD_ID">
						<table>
							<tr>
								<td class="annot graphMain" style="width:50%">Единый регистрационный номер доверенности в формате МЧД</td>
								<td class="value graphMain" style="width:50%">
									<xsl:apply-templates select="cat_ru:MCD_ID"/>
								</td>
							</tr>
						</table>
					</xsl:if-->
					<xsl:if test="mli:DocNumber">
						<div class="title marg-top">Номер и дата документа</div>
						<div>
							<xsl:apply-templates select="mli:DocNumber">
								<xsl:with-param name="wdth" select="$w"/>
							</xsl:apply-templates>
						</div>
					</xsl:if>
					<xsl:if test="mli:ActionEnd">
						<table>
							<tr>
								<td class="annot graphMain" style="width:50%">Срок действия</td>
								<td class="value graphMain" style="width:50%">
									<xsl:apply-templates select="mli:ActionEnd" mode="russian_date"/>
								</td>
							</tr>
						</table>
					</xsl:if>
					<xsl:if test="mli:GoodsName">
						<table>
							<tr>
								<td class="annot graphMain" style="width:50%">Наименование товаров</td>
								<td class="graphMain value" style="width:50%">
									<xsl:for-each select="mli:GoodsName">
										<xsl:value-of select="."/>
										<xsl:if test="position()!=last()">
											<xsl:text>, </xsl:text>
										</xsl:if>
									</xsl:for-each>
								</td>
							</tr>
						</table>
					</xsl:if>
					<xsl:if test="mli:Status">
						<table>
							<tr>
								<td class="annot graphMain" style="width:50%">Статус документа</td>
								<td class="value graphMain" style="width:50%">
									<xsl:choose>
										<xsl:when test="mli:Status='1'">
											<xsl:text>Действует</xsl:text>
										</xsl:when>
										<xsl:when test="mli:Status='2'">
											<xsl:text>Действие приостановлено</xsl:text>
										</xsl:when>
										<xsl:when test="mli:Status='3'">
											<xsl:text>Аннулировано</xsl:text>
										</xsl:when>
										<xsl:when test="mli:Status='4'">
											<xsl:text>Срок действия истек</xsl:text>
										</xsl:when>
										<xsl:otherwise>
											<xsl:value-of select="mli:Status"/>
										</xsl:otherwise>
									</xsl:choose>
								</td>
							</tr>
						</table>
					</xsl:if>
					<table>
						<tr>
							<td class="annot graphMain" style="width:50%">Статус поиска</td>
							<td class="value graphMain" style="width:50%">
								<xsl:choose>
									<xsl:when test="mli:FindStatus='true' or mli:FindStatus='1'">
										<xsl:text>Найден</xsl:text>
									</xsl:when>
									<xsl:when test="mli:FindStatus='false' or mli:FindStatus='0'">
										<xsl:text>Сведения о лицензии отсутствуют в информационных ресурсах таможенных органов, требуется постановка лицензии на контроль</xsl:text>
									</xsl:when>
									<xsl:otherwise>
										<xsl:value-of select="mli:FindStatus"/>
									</xsl:otherwise>
								</xsl:choose>
							</td>
						</tr>
					</table>
					<xsl:if test="mli:CustomsConrol">
						<div class="title marg-top">Таможня, в которой лицензия ФСВТС России поставлена на контроль</div>
						<div>
							<xsl:apply-templates select="mli:CustomsConrol">
								<xsl:with-param name="wdth" select="$w"/>
							</xsl:apply-templates>
						</div>
					</xsl:if>
					<xsl:if test="mli:CustomsPost">
						<div class="title marg-top">Таможенный пост, который осуществляет учет количества продукции военного назначения</div>
						<div>
							<xsl:apply-templates select="mli:CustomsPost">
								<xsl:with-param name="wdth" select="$w"/>
							</xsl:apply-templates>
						</div>
					</xsl:if>
				</div>
			</body>
		</html>
	</xsl:template>
	<!-- Шаблон для типа cat_ru:CustomsType -->
